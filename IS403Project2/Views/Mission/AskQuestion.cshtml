@model IS403Project2.Models.MissionQuestions

@{
    ViewBag.Title = "AskQuestion";
}

<h2>Ask a Question</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>And someone will answer it soon!</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.missionID)
        @Html.HiddenFor(model => model.userID)
        @Html.HiddenFor(model => model.mqAnswer)



        <div class="form-group">
            @Html.LabelFor(model => model.mqQuestion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mqQuestion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mqQuestion, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Questions", "ViewFAQ")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
